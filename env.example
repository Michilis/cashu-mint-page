# Feature Toggles
VITE_ENABLE_CONTACT=true
VITE_ENABLE_MOTD=true
VITE_ENABLE_ICON=true
VITE_ENABLE_TOS=true
VITE_ENABLE_NUT_TABLE=true

# Analytics Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_DOMAIN=cashumints.space
VITE_ANALYTICS_SRC=https://analytics.azzamo.net/js/script.js

# Server Configuration
VITE_PORT=5174
VITE_PREVIEW_PORT=4173

# Proxy Configuration
# Set base path for serving behind a proxy (default: "/")
# Examples:
# VITE_BASE_PATH=/21mint.me/
# VITE_BASE_PATH=/cashu/
# VITE_BASE_PATH=/
VITE_BASE_PATH=/

# API proxy target for development (optional)
VITE_API_TARGET=http://localhost:3000

# Allowed hosts for proxy setups (comma-separated, leave empty for all hosts)
# Examples:
# VITE_ALLOWED_HOSTS=mintpage.azzamo.net,localhost,127.0.0.1
# VITE_ALLOWED_HOSTS= (empty = allow all hosts)
VITE_ALLOWED_HOSTS=