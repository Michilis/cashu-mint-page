# Toggle optional UI sections
VITE_ENABLE_CONTACT=false
VITE_ENABLE_NUT_TABLE=true
VITE_ENABLE_NIP_TABLE=true
VITE_ENABLE_MOTD=true
VITE_ENABLE_TOS=true
VITE_ENABLE_ICON=true

# Optional: Tor proxy for fetching .onion mint metadata from the browser
# Comma-separated list supported. Placeholders:
#  - {URL}  -> replaced with encoded full http://onionhost/path URL
#  - {HOST} -> replaced with onion hostname[:port]
#  - {PATH} -> replaced with request path (e.g. /v1/info)
# Examples:
# VITE_TOR_PROXY_URL=https://your-proxy.example/tor?url={URL}
# VITE_TOR_PROXY_URL=https://your-proxy.example/tor/{HOST}{PATH}
# VITE_TOR_PROXY_URL=https://your-proxy.example,https://backup-proxy.example/tor?url={URL}
VITE_TOR_PROXY_URL=http://localhost:8080/tor?url={URL}

# Analytics Configuration
VITE_ENABLE_ANALYTICS=true
VITE_ANALYTICS_DOMAIN=cashumints.space
VITE_ANALYTICS_SRC=https://analytics.azzamo.net/js/script.js

# Server Configuration
VITE_PORT=5174
VITE_PREVIEW_PORT=4173

# Proxy Configuration
# Set base path for serving behind a proxy (default: "/")
# Examples:
# VITE_BASE_PATH=/21mint.me/
# VITE_BASE_PATH=/cashu/
# VITE_BASE_PATH=/
VITE_BASE_PATH=/

# API proxy target for development (optional)
VITE_API_TARGET=http://localhost:3000

# Allowed hosts for proxy setups (comma-separated, leave empty for all hosts)
# Examples:
# VITE_ALLOWED_HOSTS=mintpage.azzamo.net,localhost,127.0.0.1
# VITE_ALLOWED_HOSTS= (empty = allow all hosts)
VITE_ALLOWED_HOSTS=
